<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:id="@+id/FactoryLauncherView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/factorylauncher"
            android:textColor="#000000"
            android:textScaleX="2.0"
            android:textSize="60sp"
            android:textStyle="bold" >
        </TextView>
        <TextView
            android:id="@+id/tv_factory_version"
            android:text="版本号：33"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:textStyle="bold"
            android:id="@+id/tv_test_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@id/tv_test_01"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:textStyle="bold"
            android:id="@+id/tv_test_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/temperatur_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
	    android:textColor="#000000"
            android:layout_marginLeft="380dp" >
        </TextView>

        <TextView
            android:id="@+id/temperatur_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#000000"
            android:layout_marginLeft="380dp" >
        </TextView>

        <TextView
            android:id="@+id/temperatur_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#000000"
            android:layout_marginLeft="380dp" >
        </TextView>

        <TextView
            android:id="@+id/temperatur_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#000000"
            android:layout_marginLeft="380dp" >
        </TextView>
    </LinearLayout>

</LinearLayout>
